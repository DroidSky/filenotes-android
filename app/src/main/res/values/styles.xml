<resources>

    <!--
     Useful references:
        http://www.hidroh.com/2015/02/25/support-multiple-themes-android-app-part-2/
        https://www.google.com/design/spec/style/color.html
    -->

    <!-- Font sizes -->
    <style name="TextSizeTiny">
        <item name="android:textSize">8sp</item>
    </style>
    <style name="TextSizeSmall">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextSizeMedium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextSizeLarge">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextSizeHuge">
        <item name="android:textSize">38sp</item>
    </style>

    <!-- Themes -->
    <style name="Drawer">
        <item name="android:background">?android:attr/windowBackground</item>
    </style>
    <style name="DrawerText" parent="TextSizeLarge">
        <item name="android:padding">16dp</item>
    </style>

    <!-- Main app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#80cbc4</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">#00695c</item>
    </style>

</resources>
